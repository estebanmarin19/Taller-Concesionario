    </div>
    
  </header>
  
    <form action="/frminsertarusuco" method="POST" class="form-register animated fadeInDown">
        <h1>Formulario Registro Usuarios</h1>
        <input class="forprincipal" type="text" name="idusu" placeholder="Id" autofocus>
        <input class="forprincipal" type="text" name="nomusu" placeholder="Nombre Usuario" autofocus>
        <input class="forprincipal" type="text" name="clave" placeholder="Clave" autofocus>
        <button class="botons" type="submit">Registrar</button>
        <p><a href="#">Â¿Ya tengo Cuenta?</a></p>
        
    </form>
  <br>
  <br>
<form action="" name="frm" id="frm">
  <table > 
    
    <thead>
        
        <tr>
            
            <th>Id Usu</th>
            <th>Nombre De Usuario</th>
            <th>Clave</th>
            <th>Actualizar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        <% datos.forEach(function (datos){ %>
    <tr>
        <td><input type="text" value="<%=datos.idusu%>" name="id" id="id" class="id" ></td>
        <td><input type="text" value="<%=datos.nomusu%>" name="Nombre" id="nom" class="nom"></td>
        <td><input type="text" value="<%=datos.clave%>" name="Clave" id="clave" class="clave"></td>
        <td><input type="submit" value="Actualizar" id="btnact" class="btnact"></td>
        <td><input type="submit" value="Eliminar" id="btneli" class="btneli"></td>
    </tr>
        <%})%>
    </tbody>
    </table>
    </form>


</body>
</html>